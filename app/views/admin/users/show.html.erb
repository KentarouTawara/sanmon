<div class="max-w-xl">
    <div class="p-4 flex">
        <h1 class="text-3xl">
          <%= @user.penname %>
        </h1>
    </div>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <tbody>
          <tr>
            <th>ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>PenName</th>
            <td><%= @user.penname %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @user.email.present? ? @user.email : '未登録' %></td>
          </tr>
          <tr>
            <th>作品数</th>
            <td><%= @user.works.count %>個</td>
          </tr>
          <tr>
            <th>登録日</th>
            <td><%= l @user.created_at, format: :long %></td>
          </tr>
          <tr>
            <th>管理者権限</th>
            <td><%= @user.admin? ? 'あり' : '-' %></td>
          </tr>
        </tbody>
      </table>
      <div class="p-4 flex justify-between">
        <%= link_to '戻る', admin_users_path, class: 'btn btn-link link-secondary' %>
        <%= link_to '編集', edit_admin_user_path(@user), class: 'btn btn-link link-secondary' %>
        <%= button_to '削除する', admin_user_path, method: :delete, class: 'btn btn-accent' %>
      </div>
    </div>
</div>

