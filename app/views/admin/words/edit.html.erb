<div class="max-w-xl mx-auto">
  <%= form_with model: @word, url: admin_word_path(@word), method: :put, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>
    <h1 class="text-center text-2xl mb-6 text-gray-600 font-bold font-sans">
      編集
    </h1>
    <%= render "shared/error_messages_form", { object: f.object } %>
    <div class="mb-4">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: 'input input-bordered shadow w-full focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <%= f.label :active, class: "label" %>
      <label>
        <%= f.radio_button :active, true %>
        はい
      </label>
      <label>
        <%= f.radio_button :active, false %>
        いいえ
      </label>
    </div>
    <div class="flex justify-center">
      <%= f.submit '送信', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>